{
    "version": "1.0.0",
    "name": "boilerplate-preact",
    "description": "",
    "main": "dist/init.js",
    "scripts": {
        "preinstall": "npx npm-force-resolutions",
        "start": "npm run dev",
        "dev": "npm run typecheck && npm run electron | npm run parcel:watch",
        "electron": "npm run parcel:init && electron . --dev",
        "build": "npm run typecheck && npm run parcel:build",
        "parcel:init": "tsc src/init.ts -outDir dist",
        "parcel:watch": "parcel watch ./src/index.html --public-url ./",
        "parcel:build": "parcel build ./src/index.html --public-url ./",
        "typecheck": "tsc --noEmit"
    },
    "alias": {
        "react": "preact/compat",
        "react-dom": "preact/compat"
    },
    "browserslist": [
        "last 2 chrome versions",
        "last 2 firefox versions"
    ],
    "devDependencies": {
        "@types/node": "^14.14.35",
        "autoprefixer": "^9.8.6",
        "electron": "^12.0.1",
        "electron-reload": "^1.5.0",
        "parcel-bundler": "^1.12.4",
        "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.2",
        "typescript": "^4.1.3"
    },
    "dependencies": {
        "preact": "^10.5.12"
    },
    "resolutions": {
        "node-forge": "0.10.0"
    }
}